# GlitchTip MCP Server Configuration
# Copy this file to .env and fill in your values

# GlitchTip instance URL
GLITCHTIP_URL=https://glitchtip.example.com

# API token from /profile/auth-tokens
# Required scopes: event:read, event:write, project:read, org:read
GLITCHTIP_API_TOKEN=your-api-token-here

# Organization slug (optional - auto-detected from first org)
GLITCHTIP_ORG_SLUG=your-org-slug
