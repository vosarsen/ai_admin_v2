# YooKassa (ЮKassa) - Основная платежная система в России
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key

# Stripe - Альтернатива для международных платежей
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Tinkoff - Еще одна популярная платежная система в России
TINKOFF_TERMINAL_KEY=your_terminal_key
TINKOFF_SECRET_KEY=your_secret_key

# Настройки сервера
PORT=3001
SITE_URL=http://localhost:8080

# База данных (для production)
DATABASE_URL=postgresql://user:password@localhost:5432/chatpush

# Email сервис для отправки уведомлений
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# JWT для авторизации
JWT_SECRET=your_jwt_secret_key